<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/levels"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="24dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/raindrops" />

            <TextView
                android:id="@+id/tempLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:textAlignment="center"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="1dp"
            android:layout_height="20dp"
            app:srcCompat="@android:color/background_light"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="24dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/humidity" />

            <TextView
                android:id="@+id/speedLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:textAlignment="center"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/white"
            android:layout_width="1dp"
            android:layout_height="20dp"
            app:srcCompat="@android:color/background_light"
            android:background="#fff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingRight="8dp"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="24dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/orion_sunny_wind_gust" />

            <TextView
                android:id="@+id/humidLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:paddingLeft="8dp"
                android:textAlignment="center"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/titleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subsLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/descLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:text="TextView"
        android:textColor="#fff"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

<!--        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator-->
<!--            android:id="@+id/dots_indicator"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            app:dotsColor="#fff"-->
<!--            app:dotsCornerRadius="8dp"-->
<!--            app:dotsSize="16dp"-->
<!--            app:dotsSpacing="4dp"-->
<!--            app:dotsWidthFactor="2.5"-->
<!--            app:progressMode="true"-->
<!--            app:selectedDotColor="#fff"-->

<!--            >-->

<!--        </com.tbuonomo.viewpagerdotsindicator.DotsIndicator>-->

        <TextView
            android:id="@+id/spacersssssss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="24dp"
            android:layout_weight="1"
            android:lineSpacingExtra="5sp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="bottom"
            android:background="@drawable/more"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>


</LinearLayout>